<UserControl
    x:Class="Podium.Controls.ProductControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Podium.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <StackPanel>
        <TextBlock Name="RankingTextBlock" Text="{x:Bind CurrentProduct.Ranking}"/>
        <Image Name="ProductImage" Source="{x:Bind CurrentProduct.Post.Thumbnail.Url}"/>
        <TextBlock Name="ProductNameTextBlock" Text="{x:Bind CurrentProduct.Post.Name}"/>
    </StackPanel>
</UserControl>
