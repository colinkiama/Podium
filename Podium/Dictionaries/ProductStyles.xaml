<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Podium.Dictionaries">
    <Style x:Key="RankingTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize"
                Value="24"/>
        <Setter Property="FontWeight"
                Value="SemiBold"/>
    </Style>

    <Style x:Key="FlyoutTitleTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize"
                Value="18"/>
        <Setter Property="FontWeight"
                Value="SemiBold"/>
    </Style>

</ResourceDictionary>
